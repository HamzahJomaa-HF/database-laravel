            "get": {
                "tags": [
                    "Activities"
                ],
                "summary": "Get all activities or a specific activity by ID",
                "operationId": "e815b8334ff4c8bc726dccf564588ddb",
                "parameters": [
                    {
                        "name": "id",
                        "in": "query",
                        "description": "Optional activity UUID to fetch a specific activity",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Activities retrieved successfully"
                    },
                    "404": {
                        "description": "Activity not found"
                    }
                }
            },
            "post": {
                "tags": [
                    "Activities"
                ],
                "summary": "Create a new activity",
                "operationId": "1a0d5dd3289135ab54e34094bb034672",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "activity_title",
                                    "activity_type",
                                    "content_network",
                                    "start_date",
                                    "end_date"
                                ],
                                "properties": {
                                    "activity_title": {
                                        "type": "string",
                                        "example": "Workshop on AI"
                                    },
                                    "activity_type": {
                                        "type": "string",
                                        "example": "Training"
                                    },
                                    "content_network": {
                                        "type": "string",
                                        "example": "Online"
                                    },
                                    "start_date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-10-20"
                                    },
                                    "end_date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-10-22"
                                    },
                                    "parent_activity": {
                                        "type": "string",
                                        "format": "uuid",
                                        "example": "a1b2c3d4-5678-90ab-cdef-1234567890ab"
                                    },
                                    "target_cop": {
                                        "type": "string",
                                        "format": "uuid",
                                        "example": "b2c3d4e5-6789-0abc-def1-234567890bcd"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Activity created successfully"
                    },
                    "400": {
                        "description": "Invalid input data"
                    }
                }
            }
        },
